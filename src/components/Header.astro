import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://www.linkedin.com/in/benjamin-brannen/" target="_blank">
        <span class="sr-only">Connect with me on LinkedIn</span>
        <svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
          <path
            fill="currentColor"
            d="M22 0H2C0.9 0 0 0.9 0 2V22C0 23.1 0.9 24 2 24H22C23.1 24 24 23.1 24 22V2C24 0.9 23.1 0 22 0zM8 20H5V9H8V20zM6.5 7.7C5.1 7.7 3.9 6.6 3.9 5.1C3.9 3.6 5.1 2.5 6.5 2.5C7.9 2.5 9 3.6 9 5.1C9 6.6 7.9 7.7 6.5 7.7zM20 20H17V14.3C17 13.2 16.1 12.6 15.2 12.6C14.4 12.6 13.7 13.1 13.5 13.9C13.4 14.1 13.4 14.4 13.4 14.7V20H10.5V9H13.2V10.8C13.7 9.7 14.9 8.9 16.4 8.9C19 8.9 20 10.3 20 13.7V20z"
